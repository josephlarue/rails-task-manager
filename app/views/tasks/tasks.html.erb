<header>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
</header>


<body>
<div class="centered"><h1> My Tasks </h1>
<ul>
  <% @tasks.each do |task| %>
    <% done = task.completed %>
    <div class="flex">
    <% if done %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
    <span></span>
    <%=link_to task.title, task_path(task) %>
    <br>
    <br>
    </div>
  <% end %>
</ul>

<a href="http://localhost:3000/tasks/new" class="btn-home" role="button" aria-disabled="true"><p>Create</p></a>

</div>
</body>